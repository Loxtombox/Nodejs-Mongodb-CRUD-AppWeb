<div class="row">
    <div class="col-sm-8 col-lg-5 col-xl-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Registro de Cuenta</h4>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="mb-3">
                    <input type="text" class="form-control" name="surname" placeholder="Apellidos" value="{{surname}}">
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar Contraseña" value="{{confirm_password}}">
                    </div>
                        <button type="submit" class="btn btn-primary btn-block w-100">REGISTRARSE</button>
                </form>
            </div>
        </div>
    </div>
</div>