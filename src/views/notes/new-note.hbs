<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Nota</h3>    
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input name="title" type="text" class="form-control" placeholder="Título" autofocus>     
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Descripción" class="form-control"></textarea>
                </div> 
                <div>
                    <select class="form-control" name="idEntrenador" aria-label="Default select example">
                        <option selected>Seleccione Entrenador</option>
                        <!-- repite por cada carta -->
                        {{#each users}} 
                            {{#if (eq permisos  1)}}
                            <option value="{{_id}}"> {{name}}</option>
                            {{/if}}
                        {{/each}}
                    </select>
                </div>



                <div class="form-group">
                    <input name="fecha" type="date" id="dateselect" class="form-control"></input>
                </div> 
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        CREAR
                    </button>
                </div>  
            </form>
        </div>
    </div>
</div>

{{!--tratamiento de la fecha y hora para --}}
<script type="text/javascript">
    $(function(){
        $('#dateselect').datetimepicker({
            inline: true,
            sideBySide: true,
            locale: 'es',
            format: 'yyyy-mm-dd hh:ii'
        });
    });
</script>