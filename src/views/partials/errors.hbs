<!-- MENSAJES DE ERROR -->
{{#if error}}
    <div class="alert alert-danger alert-dismissible fade show">
        {{error}}
        <button typle="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

{{/if}}

{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show">
        {{text}}
        <button typle="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/each}}